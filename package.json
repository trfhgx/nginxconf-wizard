{
  "name": "nginxconf-wizard",
  "version": "0.1.3",
  "description": "Intelligent CLI tool for generating production-ready Nginx configurations",
  "type": "module",
  "main": "src/index.js",
  "bin": {
    "nginxconf-wizard": "./bin/nginxconf-wizard.js"
  },
  "files": [
    "bin/",
    "src/",
    "templates/",
    "README.md",
    "LICENSE"
  ],
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "start": "node bin/nginxconf-wizard.js",
    "dev": "node bin/nginxconf-wizard.js",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "test:watch": "NODE_OPTIONS=--experimental-vm-modules jest --watch",
    "test:coverage": "NODE_OPTIONS=--experimental-vm-modules jest --coverage",
    "lint": "eslint src/**/*.js",
    "format": "prettier --write \"src/**/*.js\""
  },
  "keywords": [
    "nginx",
    "configuration",
    "cli",
    "devops",
    "server",
    "ssl",
    "http2",
    "http3"
  ],
  "author": "Your Name <your.email@example.com>",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/trfhgx/nginxconf-wizard.git"
  },
  "bugs": {
    "url": "https://github.com/trfhgx/nginxconf-wizard/issues"
  },
  "homepage": "https://github.com/trfhgx/nginxconf-wizard#readme",
  "dependencies": {
    "chalk": "^5.6.2",
    "cli-table3": "^0.6.5",
    "commander": "^14.0.2",
    "configstore": "^7.1.0",
    "handlebars": "^4.7.8",
    "inquirer": "^12.11.1",
    "joi": "^18.0.1",
    "open": "^10.2.0",
    "ora": "^9.0.0",
    "terminal-link": "^5.0.0",
    "update-notifier": "^7.3.1",
    "validator": "^13.15.23"
  },
  "devDependencies": {
    "eslint": "^9.39.1",
    "jest": "^30.2.0",
    "prettier": "^3.6.2"
  }
}
