# Nginx Configuration for {{domain.primary}}
# Pattern: SSR with API Backend
# Generated: {{generatedAt}}

{{#if features.upstream}}
# Upstream SSR Application Server
upstream ssr_app {
    {{#each features.upstream.ssrServers}}
    server {{this.host}}:{{this.port}}{{#if this.weight}} weight={{this.weight}}{{/if}}{{#if this.maxFails}} max_fails={{this.maxFails}}{{/if}}{{#if this.failTimeout}} fail_timeout={{this.failTimeout}}{{/if}};
    {{/each}}
    
    keepalive 32;
    keepalive_timeout 60s;
}

{{#if features.upstream.apiServers}}
# Upstream API Server
upstream api_server {
    {{#each features.upstream.apiServers}}
    server {{this.host}}:{{this.port}}{{#if this.weight}} weight={{this.weight}}{{/if}}{{#if this.maxFails}} max_fails={{this.maxFails}}{{/if}}{{#if this.failTimeout}} fail_timeout={{this.failTimeout}}{{/if}};
    {{/each}}
    
    keepalive 32;
    keepalive_timeout 60s;
}
{{/if}}
{{/if}}

{{#if ssl.enabled}}
# HTTP -> HTTPS Redirect
server {
    listen {{domain.port}};
    listen [::]:{{domain.port}};
    server_name {{domain.primary}}{{#each domain.aliases}} {{this}}{{/each}};
    return 301 https://$server_name$request_uri;
}

# HTTPS Server
server {
    listen {{domain.httpsPort}} ssl{{#if ssl.http3}} http3{{/if}};
    listen [::]:{{domain.httpsPort}} ssl{{#if ssl.http3}} http3{{/if}};
    server_name {{domain.primary}}{{#each domain.aliases}} {{this}}{{/each}};

    {{#if ssl.http2}}
    http2 on;
    {{/if}}

    # SSL Configuration
    {{#if (eq ssl.provider "letsencrypt")}}
    ssl_certificate /etc/letsencrypt/live/{{domain.primary}}/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/{{domain.primary}}/privkey.pem;
    ssl_trusted_certificate /etc/letsencrypt/live/{{domain.primary}}/chain.pem;
    {{else if (eq ssl.provider "custom")}}
    ssl_certificate /etc/nginx/ssl/{{domain.primary}}/cert.pem;
    ssl_certificate_key /etc/nginx/ssl/{{domain.primary}}/key.pem;
    {{else if (eq ssl.provider "self-signed")}}
    ssl_certificate /etc/nginx/ssl/{{domain.primary}}/cert.pem;
    ssl_certificate_key /etc/nginx/ssl/{{domain.primary}}/key.pem;
    {{else if (eq ssl.provider "cloudflare")}}
    ssl_certificate /etc/nginx/ssl/{{domain.primary}}/cloudflare.pem;
    ssl_certificate_key /etc/nginx/ssl/{{domain.primary}}/cloudflare.key;
    ssl_client_certificate /etc/nginx/ssl/cloudflare/origin-pull-ca.pem;
    ssl_verify_client on;
    {{/if}}

    ssl_protocols {{sslProtocols ssl.http2 ssl.http3}};
    ssl_ciphers {{sslCiphers}};
    ssl_prefer_server_ciphers off;
    ssl_session_timeout 1d;
    ssl_session_cache shared:SSL:10m;
    ssl_session_tickets off;
    {{#if (eq ssl.provider "letsencrypt")}}
    ssl_stapling on;
    ssl_stapling_verify on;
    resolver 8.8.8.8 8.8.4.4 valid=300s;
    resolver_timeout 5s;
    {{/if}}

    {{#if ssl.http3}}
    add_header Alt-Svc 'h3=":{{domain.httpsPort}}"; ma=86400';
    {{/if}}
{{else}}
server {
    listen {{domain.port}};
    listen [::]:{{domain.port}};
    server_name {{domain.primary}}{{#each domain.aliases}} {{this}}{{/each}};
{{/if}}

    access_log /var/log/nginx/{{domain.primary}}/access.log combined;
    error_log /var/log/nginx/{{domain.primary}}/error.log warn;

    {{#if security.headers}}
    add_header X-Frame-Options "SAMEORIGIN" always;
    add_header X-Content-Type-Options "nosniff" always;
    add_header X-XSS-Protection "1; mode=block" always;
    add_header Referrer-Policy "strict-origin-when-cross-origin" always;
    {{#if ssl.enabled}}
    add_header Strict-Transport-Security "max-age=63072000; includeSubDomains" always;
    {{/if}}
    {{/if}}

    # API Routes
    location {{features.apiPath}} {
        {{#if features.upstream.apiServers}}
        proxy_pass http://api_server;
        {{else}}
        proxy_pass {{features.apiTarget}};
        {{/if}}
        
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        
        proxy_connect_timeout 60s;
        proxy_send_timeout 60s;
        proxy_read_timeout 60s;
        
        {{#if security.rateLimiting}}
        limit_req zone=api_limit burst=20 nodelay;
        {{/if}}
    }

    {{#if features.staticAssetsPath}}
    # Static Assets ({{features.staticAssetsPath}})
    location {{features.staticAssetsPath}} {
        {{#if features.upstream}}
        proxy_pass http://ssr_app;
        {{else}}
        proxy_pass http://localhost:3000;
        {{/if}}
        
        expires 1y;
        add_header Cache-Control "public, immutable";
        access_log off;
    }
    {{/if}}

    # SSR Application
    location / {
        {{#if features.upstream}}
        proxy_pass http://ssr_app;
        {{else}}
        proxy_pass http://localhost:3000;
        {{/if}}
        
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        
        proxy_buffering on;
        proxy_buffer_size 4k;
        proxy_buffers 8 4k;
        proxy_busy_buffers_size 8k;
        
        {{#if features.compression}}
        gzip on;
        gzip_vary on;
        gzip_proxied any;
        gzip_comp_level 6;
        gzip_types text/plain text/css text/xml text/javascript application/json application/javascript application/xml+rss;
        {{/if}}
    }

    location ~ /\. {
        deny all;
        access_log off;
        log_not_found off;
    }
}

{{#if security.rateLimiting}}
limit_req_zone $binary_remote_addr zone=api_limit:10m rate=100r/s;
{{/if}}
