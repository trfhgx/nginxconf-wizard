# Nginx Configuration for {{domain.primary}}
# Pattern: SPA with API Backend
# Generated: {{generatedAt}}

{{#if ssl.enabled}}
# HTTP -> HTTPS Redirect
server {
    listen {{domain.port}};
    listen [::]:{{domain.port}};
    server_name {{domain.primary}}{{#each domain.aliases}} {{this}}{{/each}};

    # Redirect all HTTP to HTTPS
    return 301 https://$server_name$request_uri;
}

# HTTPS Server
server {
    listen {{domain.httpsPort}} ssl{{#if ssl.http2}} http2{{/if}}{{#if ssl.http3}} http3{{/if}};
    listen [::]:{{domain.httpsPort}} ssl{{#if ssl.http2}} http2{{/if}}{{#if ssl.http3}} http3{{/if}};
    
    server_name {{domain.primary}}{{#each domain.aliases}} {{this}}{{/each}};

    # SSL Configuration
    {{#if (eq ssl.provider "letsencrypt")}}
    ssl_certificate /etc/letsencrypt/live/{{domain.primary}}/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/{{domain.primary}}/privkey.pem;
    ssl_trusted_certificate /etc/letsencrypt/live/{{domain.primary}}/chain.pem;
    {{else if (eq ssl.provider "custom")}}
    ssl_certificate {{ssl.certPath}};
    ssl_certificate_key {{ssl.keyPath}};
    {{else if (eq ssl.provider "cloudflare")}}
    ssl_certificate /etc/ssl/cloudflare/{{domain.primary}}.pem;
    ssl_certificate_key /etc/ssl/cloudflare/{{domain.primary}}.key;
    ssl_client_certificate /etc/ssl/cloudflare/origin-pull-ca.pem;
    ssl_verify_client on;
    {{/if}}

    # SSL Protocols and Ciphers
    ssl_protocols {{sslProtocols ssl.http2 ssl.http3}};
    ssl_ciphers {{sslCiphers}};
    ssl_prefer_server_ciphers off;

    # SSL Session
    ssl_session_timeout 1d;
    ssl_session_cache shared:SSL:10m;
    ssl_session_tickets off;

    # OCSP Stapling
    ssl_stapling on;
    ssl_stapling_verify on;
    resolver 8.8.8.8 8.8.4.4 valid=300s;
    resolver_timeout 5s;

    {{#if ssl.http3}}
    # HTTP/3 Configuration
    add_header Alt-Svc 'h3=":{{domain.httpsPort}}"; ma=86400';
    {{/if}}

{{else}}
# HTTP Server
server {
    listen {{domain.port}};
    listen [::]:{{domain.port}};
    
    server_name {{domain.primary}}{{#each domain.aliases}} {{this}}{{/each}};
{{/if}}

    # Document Root
    root /var/www/{{domain.primary}}/html;
    index index.html;

    # Access and Error Logs
    access_log /var/log/nginx/{{domain.primary}}/access.log combined;
    error_log /var/log/nginx/{{domain.primary}}/error.log warn;

    {{#if security.headers}}
    # Security Headers
    add_header X-Frame-Options "SAMEORIGIN" always;
    add_header X-Content-Type-Options "nosniff" always;
    add_header X-XSS-Protection "1; mode=block" always;
    add_header Referrer-Policy "strict-origin-when-cross-origin" always;
    {{#if ssl.enabled}}
    add_header Strict-Transport-Security "max-age=63072000; includeSubDomains" always;
    {{/if}}
    {{/if}}

    {{#if features.proxy}}
    # API Proxy Configuration
    location {{features.proxy.path}} {
        proxy_pass {{features.proxy.target}};
        proxy_http_version 1.1;
        
        # Proxy Headers
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header X-Forwarded-Host $host;
        proxy_set_header X-Forwarded-Port $server_port;
        
        # WebSocket support
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        
        # Timeouts
        proxy_connect_timeout 60s;
        proxy_send_timeout 60s;
        proxy_read_timeout 60s;
        
        {{#if features.proxy.cors}}
        # CORS Headers
        add_header Access-Control-Allow-Origin {{features.proxy.corsOrigin}} always;
        add_header Access-Control-Allow-Methods "GET, POST, PUT, DELETE, OPTIONS" always;
        add_header Access-Control-Allow-Headers "Authorization, Content-Type, Accept" always;
        add_header Access-Control-Allow-Credentials "true" always;
        
        if ($request_method = 'OPTIONS') {
            add_header Access-Control-Allow-Origin {{features.proxy.corsOrigin}};
            add_header Access-Control-Allow-Methods "GET, POST, PUT, DELETE, OPTIONS";
            add_header Access-Control-Allow-Headers "Authorization, Content-Type, Accept";
            add_header Access-Control-Max-Age 86400;
            add_header Content-Type "text/plain; charset=utf-8";
            add_header Content-Length 0;
            return 204;
        }
        {{/if}}
        
        {{#if security.rateLimiting}}
        # Rate Limiting
        limit_req zone=api_limit burst=10 nodelay;
        limit_req_status 429;
        {{/if}}
    }
    {{/if}}

    # SPA - Serve index.html for all routes
    location / {
        try_files $uri $uri/ /index.html;

        {{#if features.compression}}
        # Gzip Compression
        gzip on;
        gzip_vary on;
        gzip_proxied any;
        gzip_comp_level 6;
        gzip_types text/plain text/css text/xml text/javascript application/json application/javascript application/xml+rss application/atom+xml image/svg+xml;
        {{/if}}
    }

    # Cache Static Assets
    location ~* \.(jpg|jpeg|png|gif|ico|css|js|svg|woff|woff2|ttf|eot)$ {
        expires 1y;
        add_header Cache-Control "public, immutable";
        access_log off;
    }

    # Deny access to hidden files
    location ~ /\. {
        deny all;
        access_log off;
        log_not_found off;
    }

    {{#if customDirectives}}
    # Custom Directives
    {{#each customDirectives}}
    {{{this}}}
    {{/each}}
    {{/if}}
}

{{#if security.rateLimiting}}
# Rate Limiting Zone
limit_req_zone $binary_remote_addr zone=api_limit:10m rate=100r/s;
{{/if}}
